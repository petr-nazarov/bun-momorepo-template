{
  "name": "bun-monorepo-template",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "setup": "husky install",
    "cm": "git add . && git-cz",
    "check": "bun run check:versions && bun check:code",
    "check:versions": "check-dependency-version-consistency .",
    "check:code": "biome ci .",
    "clean": "yarn clean:node_modules && yarn clean:dist",
    "clean:node_modules": "rm -rf apps/*/node_modules && rm -rf packages/*/node_modules && rm -rf node_modules",
    "clean:dist": "rm -rf apps/*/dist && rm -rf packages/*/dist",
    "fix": "biome check . --apply",
    "release": "release-it"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.3.3",
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-conventional": "^18.1.0",
    "@release-it/bumper": "^5.1.0",
    "@release-it/conventional-changelog": "^7.0.2",
    "check-dependency-version-consistency": "^4.1.0",
    "commitizen": "^4.3.0",
    "commitlint": "^18.2.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.3",
    "pre-commit": "^1.2.2",
    "release-it": "^16.2.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): v${version}",
      "requireCleanWorkingDir": false
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {}
          ]
        }
      }
    }
  }
}
