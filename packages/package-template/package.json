{
  "name": "package-template",
  "module": "index.ts",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "scripts": {
    "release": "release-it",
    "dev" : "bun dev",
    "build": "bun build ./src/index.ts --target=bun --outdir=dist",
    "test": "bun test",
    "start": "bun run ./dist/index.js",
    "fix": "biome check . --apply"
  },
  "dependencies": {
    "config": "workspace:*"
  },
  "devDependencies": {
    "bun-types": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "release-it": {
    "git": false,
    "plugins": {
      "@release-it/bumper": {
        "out": {
          "file": "package.json",
          "path": ["dependencies.config"]
        }
      }
    }
  }
}
